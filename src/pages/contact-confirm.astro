---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="CONTACT CONFIRM | お問い合わせ内容確認">
  <div class="bg-white text-[#483F38]">
    <Header />

    <main>
      <section class="bg-[#FAFAFA] py-[80px] lg:py-[150px]">
        <div class="mx-auto flex w-[343px] flex-col gap-[40px] lg:w-[953px] lg:gap-[80px]">
          <div class="text-center text-[#436C5E] font-['Shippori_Mincho']">
            <h1 class="text-[32px] leading-[48px] tracking-[3.6px] font-semibold lg:mx-auto lg:w-[616px] lg:text-[32px] lg:leading-[40px]">
              <span class="block lg:hidden">お問い合わせ</span>
              <span class="block lg:hidden">内容確認</span>
              <span class="hidden lg:block">お問い合わせ内容確認</span>
            </h1>
            <p class="mt-[32px] text-[14px] leading-[22.75px] tracking-[2.1px] text-[#483F38] lg:mx-auto lg:w-[953px] lg:text-[16px] lg:leading-[32px] lg:tracking-[1px]">
              以下の内容でよろしければ、「送信する」ボタンを押してください。<br />
              内容を修正する場合は、「戻る」ボタンを押して修正してください。
            </p>
          </div>

          <form id="confirmForm" class="mx-auto rounded-[8px] bg-white px-[16px] py-[40px] shadow-sm lg:w-[576px] lg:px-[48px] lg:py-[56px]">
            <div class="space-y-[56px]">
              <div class="space-y-[32px] text-[12px] leading-[16px] tracking-[1.2px] font-['Shippori_Mincho']">
                <div class="space-y-[12px]">
                  <p class="text-[#436C5E]">お名前</p>
                  <p class="text-[#483F38]" id="fullName">名前が入ります</p>
                </div>
                <div class="space-y-[12px]">
                  <p class="text-[#436C5E]">メールアドレス</p>
                  <p class="text-[#483F38]" id="email">メールアドレスが入ります</p>
                </div>
                <div class="space-y-[12px]">
                  <p class="text-[#436C5E]">お問い合わせ内容</p>
                  <p class="text-[#483F38]" id="message">
                    お問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入りますお問い合わせ内容が入ります
                  </p>
                </div>
              </div>

              <div class="flex flex-col items-center gap-[24px]">
                <button type="submit" class="inline-flex items-center justify-center rounded-full border border-[#B99563] bg-[#B99563] px-[49px] py-[10px] text-[14px] leading-[22.75px] tracking-[2.1px] text-white font-['Shippori_Mincho'] hover:bg-white hover:text-[#B99563] hover:border-[#B99563] transition-all duration-300">
                  送信する
                </button>
                <button type="button" onclick="history.back()" class="text-[12px] leading-[16px] tracking-[1.2px] text-[#475569] font-['Shippori_Mincho']">
                  戻る
                </button>
              </div>
            </div>
          </form>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>

<script>
  document.getElementById('confirmForm')?.addEventListener('submit', (event) => {
    event.preventDefault();
    window.location.href = '/contact-complete';
  });
</script>
