    let videoReady = false;

    const getHeroTexts = () => Array.from(document.querySelectorAll('.hero-text'));

    const showHeroTexts = () => {
      getHeroTexts().forEach((el) => {
        el.classList.add('is-visible');
        el.classList.remove('is-fading');
      });
    };

    const fadeOutHeroTexts = () => {
      getHeroTexts().forEach((el) => el.classList.add('is-fading'));
    };

    const hideIntroOverlay = () => {
      const introOverlay = document.getElementById('intro-overlay');
      if (!introOverlay) return;
      introOverlay.classList.add('is-hidden');
      setTimeout(() => {
        introOverlay.style.display = 'none';
        showHeroTexts();
        // Keep hero texts visible after intro.
      }, 3000);
    };

    // Rectangle43動画切り替え用の関数
    function switchToVideo() {
      const video = document.getElementById('hero-video');
      const fallback = document.getElementById('hero-fallback');

      if (video && fallback) {
        fallback.style.display = 'none';
        video.style.display = 'block';
        videoReady = true;

        const introOverlay = document.getElementById('intro-overlay');
        const overlayHidden = introOverlay && introOverlay.style.display === 'none';
        // Keep hero texts visible after video loads.
      }
    }
      
    // Rectangle43を黒背景表示に戻す
    function switchToBlackBackground() {
      const video = document.getElementById('hero-video');
      const fallback = document.getElementById('hero-fallback');

      if (video && fallback) {
        video.style.display = 'none';
        fallback.style.display = 'block';
        videoReady = false;
        showHeroTexts();
      }
    }
      
      // ページ読み込み時に動画ファイルの存在をチェック
      document.addEventListener('DOMContentLoaded', function() {
        hideIntroOverlay();
        // 動画ファイルが存在する場合は自動的に切り替え
        fetch('/videos/4441009-hd_1920_1080_25fps.mp4', { method: 'HEAD' })
          .then(response => {
            if (response.ok) {
              switchToVideo();
            }
          })
          .catch(() => {
            // ファイルが存在しない場合は画像表示を継続
            console.info('動画ファイルが配置されていません。画像表示中です。');
          });
      });
    
    // Fixed Reservation Button - SPはFV内から追従表示
    document.addEventListener('DOMContentLoaded', function() {
      // Scroll fade-in for images (exclude FV/Rectangle43 and header/footer)
      const fadeTargets = Array.from(document.querySelectorAll('main img')).filter((img) => {
        if (img.closest('header') || img.closest('footer')) return false;
        if (img.closest('section[data-name="FV"]')) return false;
        if (img.hasAttribute('data-no-fade')) return false;
        return true;
      });

      fadeTargets.forEach((img) => img.classList.add('scroll-fade'));

      if (fadeTargets.length) {
        const observer = new IntersectionObserver(
          (entries, obs) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
                obs.unobserve(entry.target);
              }
            });
          },
          { root: null, rootMargin: '0px 0px -10% 0px', threshold: 0 }
        );

        fadeTargets.forEach((img) => observer.observe(img));
      }

      const fixedReservationBtn = document.getElementById('fixed-reservation-btn');
      if (fixedReservationBtn) {
        let footerInView = false;
        const updateReservationButton = () => {
          const shouldShow = window.innerWidth <= 768 && !footerInView;
          fixedReservationBtn.style.display = shouldShow ? 'block' : 'none';
        };

        const footer = document.querySelector('footer');
        if (footer) {
          const footerObserver = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                footerInView = entry.isIntersecting;
                updateReservationButton();
              });
            },
            { root: null, threshold: 0 }
          );
          footerObserver.observe(footer);
        }

        updateReservationButton();
        window.addEventListener('resize', updateReservationButton);
      }

      // Room Gallery Auto Scroll (smooth)
      initRoomGalleryAutoScroll();

      function initRoomGalleryAutoScroll() {
        const pcGallery = document.getElementById('room-gallery-pc');
        const spGallery = document.getElementById('room-gallery-sp');

        setupSmoothGallery(pcGallery, 0.35);
        setupSmoothGallery(spGallery, 0.25);
      }

      function setupSmoothGallery(container, speed) {
        if (!container || !container.children.length) return;

        let offsetX = 0;
        let contentWidth = 0;
        let rafId = null;

        const updateWidth = () => {
          contentWidth = container.scrollWidth / 2;
        };

        const animate = () => {
          offsetX += speed;
          if (offsetX >= contentWidth) {
            offsetX = 0;
          }
          container.style.transform = `translateX(-${offsetX}px)`;
          rafId = requestAnimationFrame(animate);
        };

        updateWidth();
        window.addEventListener('resize', updateWidth);
        rafId = requestAnimationFrame(animate);
      }
    });
