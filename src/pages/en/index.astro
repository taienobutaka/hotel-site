    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('contact-form');
        if (!form) return;

        const requiredFields = [
          { input: document.getElementById('contact-name'), error: document.getElementById('contact-name-error') },
          { input: document.getElementById('contact-email'), error: document.getElementById('contact-email-error') },
          { input: document.getElementById('contact-message'), error: document.getElementById('contact-message-error') },
        ];
        const privacyCheckbox = document.getElementById('contact-privacy');
        const submitButton = form.querySelector('button[type="submit"]');

        const toggleError = (target, show) => {
          if (!target) return;
          target.classList.toggle('hidden', !show);
        };

        const validateRequired = () => {
          let hasError = false;
          requiredFields.forEach(({ input, error }) => {
            const value = input?.value?.trim() ?? '';
            const isEmpty = value.length === 0;
            toggleError(error, isEmpty);
            if (isEmpty) {
              hasError = true;
            }
          });
          const privacyChecked = privacyCheckbox?.checked ?? false;
          if (!privacyChecked) {
            hasError = true;
          }
          return !hasError;
        };

        const updateSubmitState = () => {
          if (!submitButton) return;
          const requiredFilled = requiredFields.every(({ input }) => (input?.value?.trim() ?? '').length > 0);
          const privacyChecked = privacyCheckbox?.checked ?? false;
          const canSubmit = requiredFilled && privacyChecked;
          submitButton.disabled = !canSubmit;
          submitButton.setAttribute('aria-disabled', String(!canSubmit));
        };

        requiredFields.forEach(({ input, error }) => {
          if (!input) return;
          input.addEventListener('blur', () => {
            const isEmpty = input.value.trim().length === 0;
            toggleError(error, isEmpty);
          });
          input.addEventListener('input', () => {
            if (input.value.trim().length > 0) {
              toggleError(error, false);
            }
            updateSubmitState();
          });
        });

        privacyCheckbox?.addEventListener('change', updateSubmitState);
        updateSubmitState();

        form.addEventListener('submit', (event) => {
          const isValid = validateRequired();
          if (!isValid) {
            event.preventDefault();
          }
        });
      });
    </script>

