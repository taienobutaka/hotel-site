---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/en/Header.astro';
import Footer from '../../components/en/Footer.astro';
---

<Layout title="CONTACT COMPLETE | Contact Complete">
  <div class="bg-white text-[#483F38]">
    <Header />

    <main>
      <section class="bg-[#FAFAFA] pt-[152px] pb-[80px] lg:pt-[222px] lg:pb-[150px]">
        <div class="mx-auto flex w-[343px] flex-col items-center gap-[40px] text-center font-['Shippori_Mincho'] lg:w-full lg:gap-[80px] lg:px-[256px]">
          <h1 class="text-[32px] leading-[48px] tracking-[3.6px] font-medium text-[#436C5E] lg:mx-auto lg:w-[616px] lg:text-[36px] lg:leading-[54px]">
            Contact Complete
          </h1>
          <p class="text-[14px] leading-[22.75px] tracking-[2.1px] text-[#483F38] lg:w-[953px] lg:text-[16px] lg:leading-[32px] lg:tracking-[1px]">
            <span class="hidden lg:block">
              Thank you for contacting us. We appreciate your inquiry.<br />
              We will review your message and get back to you shortly.
            </span>
            <span class="lg:hidden">
              <span class="block">Thank you for contacting us.</span>
              <span class="block">We appreciate your inquiry.</span>
              <span class="block">We will review your message</span>
              <span class="block">and get back to you shortly.</span>
            </span>
          </p>
          <a href="/en/" class="inline-flex items-center justify-center rounded-full border border-[#B99563] bg-[#B99563] px-[49px] py-[10px] text-[14px] leading-[22.75px] tracking-[2.1px] text-white hover:bg-white hover:text-[#B99563] hover:border-[#B99563] transition-all duration-300">
            TOP
          </a>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>
