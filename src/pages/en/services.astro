---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/en/Header.astro';
import Footer from '../../components/en/Footer.astro';
---

<Layout title="SERVICE | Services">
  <div class="bg-[#F5EFEA] text-[#483F38]">
    <Header />

    <main>
      <!-- KV -->
      <section class="relative h-[380px] lg:h-[640px] overflow-hidden">
        <img src="/images/services/service-kv.jpg" alt="" class="absolute service-kv-img kv-fade-bg max-w-none object-cover" />
        <div class="absolute inset-0 bg-[#483F38] kv-fade-overlay"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <h1 class="text-[32px] lg:text-[32px] leading-[48px] tracking-[4.8px] text-white/85 font-['Shippori_Mincho'] translate-y-[20.5px] lg:translate-y-0">
            SERVICE
          </h1>
        </div>
      </section>

      <!-- Service Text -->
      <section class="bg-[#F5EFEA] px-[16px] py-[80px] lg:px-[16px] xl:px-[256px] lg:py-[150px]">
        <div class="mx-auto w-full lg:max-w-[calc(100%-32px)] xl:max-w-[928px] text-center text-[15px] leading-[33px] tracking-[1.6px] text-[#483F38] font-['Shippori_Mincho'] lg:text-[16px] lg:leading-[48px]">
          <span class="hidden lg:block">
            Watch nature shift moment by moment,<br />
            and enjoy a luxurious time freed from daily bustle.<br />
            We offer an authentic wood-fired sauna and an open-air bath with natural spring water,<br />
            as well as seasonal dining,<br />
            promising a refreshing experience that truly satisfies.
          </span>
          <span class="lg:hidden">
            <span class="block">Watch nature shift moment by moment,</span>
            <span class="block">and enjoy a luxurious time</span>
            <span class="block">freed from daily bustle.</span>
            <span class="block">We offer an authentic wood-fired sauna</span>
            <span class="block">and an open-air bath with natural spring water,</span>
            <span class="block">as well as seasonal dining,</span>
            <span class="block">promising a refreshing experience</span>
            <span class="block">that truly satisfies.</span>
          </span>
        </div>
      </section>

      <!-- Cover Image -->
      <section class="relative h-[192px] lg:h-[501px] overflow-hidden">
        <img
          src="/images/services/service-cover.jpg"
          alt=""
          class="fade-target service-cover-img absolute max-w-none object-cover"
        />
      </section>

      <!-- Service Main -->
      <section class="bg-white px-[16px] pt-[80px] pb-[40px] lg:px-[16px] xl:px-[16px] min-[1540px]:px-0 lg:py-[150px]">
        <div class="mx-auto w-full lg:max-w-[calc(100%-32px)] xl:max-w-[calc(100%-32px)] 2xl:max-w-[1232px] space-y-0 lg:space-y-[120px]">
          <!-- Sauna -->
          <div>
            <div class="lg:hidden w-full pb-[40px]">
              <div class="flex flex-col text-left">
                <div>
                  <p class="flex h-[21px] items-center text-[12px] leading-[48px] tracking-[4.8px] text-[#B99563] font-['Shippori_Mincho'] invisible">PRIVATE SAUNA</p>
                  <h3 class="mt-[8px] flex h-[52px] items-center text-[24px] leading-[32px] tracking-[2.4px] text-[#483F38] font-medium font-['Shippori_Mincho']">Private Sauna</h3>
                </div>
                <p class="mt-[16px] text-[14px] leading-[30px] tracking-[1.4px] text-[#483F38] font-['Shippori_Mincho']">
                  <span class="block">In a space filled only with the crackle of burning logs, sharpen your senses.</span>
                  <span class="block">A carefully designed flow from cold bath to open-air relaxation leads you to deep rest.</span>
                  <span class="block">In a well-appointed private area, enjoy supreme luxury undisturbed.</span>
                  <span class="block">&nbsp;</span>
                  <span class="block">Soak outdoors and unwind in the sauna—spending time with nature is a unique charm of this stay.</span>
                </p>
              </div>
              <div class="fade-target mt-[40px] sauna-images-sp">
                <div class="sauna-main-window">
                  <img src="/images/services/sauna-main.jpg" alt="Private Sauna" class="sauna-main-sp-img" />
                </div>
                <div class="sauna-sub-window">
                  <img src="/images/services/sauna-sub.jpg" alt="" class="sauna-sub-sp-img" />
                </div>
              </div>
            </div>

            <div class="hidden lg:flex lg:flex-row lg:items-center lg:gap-[100px] service-pc-row">
              <div class="fade-target sauna-main h-[292px] w-full lg:h-[813px] lg:w-[480px] xl:w-[563px] lg:flex-shrink-0 service-pc-media">
                <img src="/images/services/sauna-main.jpg" alt="Private Sauna" class="sauna-main-img" />
              </div>
              <div class="lg:w-[420px] xl:w-[569px] flex flex-col service-pc-text">
                <div>
                  <p class="flex h-[21px] items-center text-[12px] leading-[48px] tracking-[4.8px] text-[#B99563] font-['Shippori_Mincho'] invisible">PRIVATE SAUNA</p>
                  <h3 class="mt-[8px] flex h-[52px] items-center text-[24px] leading-[32px] tracking-[2.4px] text-[#483F38] font-medium font-['Shippori_Mincho']">Private Sauna</h3>
                </div>
                <p class="mt-[24px] text-[14px] leading-[30px] tracking-[1.4px] text-[#475569] font-['Shippori_Mincho'] lg:w-full xl:w-[569px]">
                  <span class="block">In a space filled only with the crackle of burning logs, sharpen your senses.</span>
                  <span class="block">A carefully designed flow from cold bath to open-air relaxation leads you to deep rest.</span>
                  <span class="block">In a well-appointed private area, enjoy supreme luxury undisturbed.</span>
                  <span class="block">&nbsp;</span>
                  <span class="block">Soak outdoors and unwind in the sauna—spending time with nature is a unique charm of this stay.</span>
                </p>
              </div>
            </div>

            <div class="hidden lg:block lg:mt-[40px] lg:ml-auto lg:w-[476px]">
              <div class="fade-target sauna-sub h-[220px] w-full lg:h-[369px]">
                <img src="/images/services/sauna-sub.jpg" alt="" class="sauna-sub-img" />
              </div>
            </div>
          </div>

          <!-- Onsen -->
          <div>
            <div class="lg:hidden pt-[40px] pb-0">
              <div class="w-full flex flex-col text-left">
                <div>
                  <p class="flex h-[21px] items-center text-[12px] leading-[48px] tracking-[4.8px] text-[#B99563] font-['Shippori_Mincho'] invisible">ONSEN</p>
                  <h3 class="mt-[8px] flex h-[52px] items-center text-[24px] leading-[32px] tracking-[2.4px] text-[#483F38] font-medium font-['Shippori_Mincho']">Onsen</h3>
                </div>
                <p class="mt-[16px] text-[14px] leading-[30px] tracking-[1.4px] text-[#483F38] font-['Shippori_Mincho']">
                  <span class="block">An open-air bath using spring water drawn in Aoshima,</span>
                  <span class="block">rich in natural minerals.</span>
                  <span class="block">Enjoy a soothing moment for body and mind in an open space.</span>
                </p>
              </div>
              <div class="fade-target mt-[87px] onsen-images-sp mx-auto">
                <div class="onsen-main-window">
                  <img src="/images/services/onsen-main.jpg" alt="Onsen" class="onsen-main-sp-img" />
                </div>
                <div class="onsen-sub-window">
                  <img src="/images/services/onsen-sub.jpg" alt="" class="onsen-sub-sp-img" />
                </div>
              </div>
            </div>

            <div class="hidden lg:flex lg:flex-row lg:items-center lg:gap-[100px] service-pc-row">
              <div class="lg:w-[360px] xl:w-[435px] flex flex-col service-pc-text">
                <div>
                  <p class="flex h-[21px] items-center text-[12px] leading-[48px] tracking-[4.8px] text-[#B99563] font-['Shippori_Mincho'] invisible">ONSEN</p>
                  <h3 class="mt-[8px] flex h-[52px] items-center text-[24px] leading-[32px] tracking-[2.4px] text-[#483F38] font-medium font-['Shippori_Mincho']">Onsen</h3>
                </div>
                <p class="mt-[24px] text-[14px] leading-[30px] tracking-[1.4px] text-[#475569] font-['Shippori_Mincho'] lg:w-full xl:w-[398px]">
                  <span class="block">An open-air bath using spring water drawn in Aoshima,</span>
                  <span class="block">rich in natural minerals.</span>
                  <span class="block">Enjoy a soothing moment for body and mind in an open space.</span>
                </p>
              </div>
              <div class="fade-target onsen-main h-[292px] w-full lg:h-[773px] lg:w-[520px] xl:w-[768px] lg:flex-shrink-0 service-pc-media">
                <img src="/images/services/onsen-main.jpg" alt="Onsen" class="onsen-main-img" />
              </div>
            </div>
            <div class="hidden lg:block lg:mt-[40px] lg:ml-0 lg:w-[495px]">
              <div class="fade-target onsen-sub h-[220px] w-full lg:h-[346px]">
                <img src="/images/services/onsen-sub.jpg" alt="" class="onsen-sub-img" />
              </div>
            </div>
          </div>

          <!-- Food -->
          <div class="lg:pt-[160px]">
            <div class="lg:hidden pt-[46px] pb-0">
              <div class="w-full flex flex-col text-left">
                <div>
                  <p class="flex h-[21px] items-center text-[12px] leading-[48px] tracking-[4.8px] text-[#B99563] font-['Shippori_Mincho'] invisible">FOOD</p>
                  <h3 class="mt-[8px] flex h-[52px] items-center text-[24px] leading-[32px] tracking-[2.4px] text-[#483F38] font-medium font-['Shippori_Mincho']">Dining</h3>
                </div>
                <p class="mt-[16px] text-[14px] leading-[30px] tracking-[1.4px] text-[#483F38] font-['Shippori_Mincho']">
                  <span class="block">We offer carefully selected local specialties in an all-inclusive style.</span>
                  <span class="block">Cook in the refined dining area or enjoy an open-air BBQ on the terrace as you wish.</span>
                  <span class="block">Savor the passion of chosen producers to your heart's content in your private villa.</span>
                </p>
              </div>
              <div class="fade-target mt-[40px] pt-[33px] food-images-sp mx-auto">
                <div class="food-main-window">
                  <img src="/images/services/food-main.jpg" alt="Dining" class="food-main-sp-img" />
                </div>
                <div class="food-sub-window">
                  <img src="/images/services/food-sub.jpg" alt="" class="food-sub-sp-img" />
                </div>
              </div>
            </div>

            <div class="hidden lg:flex lg:flex-row lg:items-center lg:gap-[100px] service-pc-row">
              <div class="fade-target food-main h-[292px] w-full lg:h-[703px] lg:w-[480px] xl:w-[612px] lg:flex-shrink-0 service-pc-media">
                <img src="/images/services/food-main.jpg" alt="Dining" class="food-main-img" />
              </div>
              <div class="lg:w-[420px] xl:w-[569px] flex flex-col service-pc-text">
                <div>
                  <p class="flex h-[21px] items-center text-[12px] leading-[48px] tracking-[4.8px] text-[#B99563] font-['Shippori_Mincho'] invisible">FOOD</p>
                  <h3 class="mt-[8px] flex h-[52px] items-center text-[24px] leading-[32px] tracking-[2.4px] text-[#483F38] font-medium font-['Shippori_Mincho']">Dining</h3>
                </div>
                <p class="mt-[24px] text-[14px] leading-[30px] tracking-[1.4px] text-[#475569] font-['Shippori_Mincho'] lg:w-full xl:w-[569px]">
                  <span class="block">We offer carefully selected local specialties in an all-inclusive style.</span>
                  <span class="block">Cook in the refined dining area or enjoy an open-air BBQ on the terrace as you wish.</span>
                  <span class="block">Savor the passion of chosen producers to your heart's content in your private villa.</span>
                </p>
              </div>
            </div>
            <div class="hidden lg:block lg:mt-[40px] lg:ml-auto lg:w-[447px]">
              <div class="fade-target food-sub h-[220px] w-full lg:h-[436px]">
                <img src="/images/services/food-sub.jpg" alt="" class="food-sub-img" />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Option -->
      <section class="bg-[#F5EFEA] px-[16px] py-[80px] lg:px-[16px] min-[1400px]:px-[232px] lg:pt-[70px] lg:pb-[150px]">
        <div class="mx-auto w-full space-y-[40px] lg:w-full lg:max-w-[calc(100%-32px)] min-[1400px]:max-w-[976px] lg:space-y-[80px]">
          <div class="text-center space-y-[16px] text-[#436C5E] font-['Shippori_Mincho'] lg:-mt-[10px]">
            <p class="text-[32px] leading-[40px] tracking-[3.6px] font-medium">OPTION</p>
            <p class="text-[14px] leading-[20px] tracking-[1.4px] invisible">Add special experiences</p>
          </div>

          <div class="flex flex-col items-center gap-[32px] lg:flex-row lg:items-stretch lg:justify-center">
            <div class="w-full overflow-hidden rounded-[8px] bg-white lg:w-[304px] lg:h-[510px] flex flex-col">
              <div class="option-img option-img-1 h-[256px] w-full">
                <img src="/images/services/option-1.jpg" alt="Onsen" class="option-img-inner option-img-inner-1" />
              </div>
              <div class="px-[26px] py-[32px] lg:h-[222px]">
                <p class="text-center text-[16px] leading-[48px] tracking-[1.6px] text-[#483F38] font-['Shippori_Mincho']">Onsen</p>
                <p class="mt-[16px] w-full text-left text-[14px] leading-[22.75px] tracking-[2.1px] text-[#475569] font-['Shippori_Mincho'] lg:w-[252px]">
                  We use spring water drawn in Aoshima, rich in natural minerals. Enjoy a soothing open-air bath in an open outdoor space.
                </p>
              </div>
            </div>
            <div class="w-full overflow-hidden rounded-[8px] bg-white lg:w-[304px] lg:h-[510px] flex flex-col">
              <div class="option-img option-img-2 h-[256px] w-full">
                <img src="/images/services/option-2.jpg" alt="Private BBQ" class="option-img-inner option-img-inner-2" />
              </div>
              <div class="px-[26px] py-[32px] lg:h-[222px]">
                <p class="text-center text-[16px] leading-[48px] tracking-[1.6px] text-[#483F38] font-['Shippori_Mincho']">Private BBQ</p>
                <p class="mt-[16px] w-full text-left text-[14px] leading-[22.75px] tracking-[2.1px] text-[#475569] font-['Shippori_Mincho'] lg:w-[252px]">
                  We lend a full set of professional equipment free of charge. Enjoy carefully selected Miyazaki specialties on your private terrace.
                </p>
              </div>
            </div>
            <div class="w-full overflow-hidden rounded-[8px] bg-white lg:w-[304px] lg:h-[510px] flex flex-col">
              <div class="option-img option-img-3 h-[256px] w-full">
                <img src="/images/services/option-3.jpg" alt="Fat Bike Rental" class="option-img-inner option-img-inner-3" />
              </div>
              <div class="px-[26px] py-[32px] lg:h-[222px]">
                <p class="text-center text-[16px] leading-[48px] tracking-[1.6px] text-[#483F38] font-['Shippori_Mincho']">Fat Bike Rental</p>
                <p class="mt-[16px] w-full text-left text-[14px] leading-[22.75px] tracking-[2.1px] text-[#475569] font-['Shippori_Mincho'] lg:w-[252px]">
                  We provide fat bikes that glide over sand and unpaved roads. Explore Miyazaki's coastline and nearby spots at your own pace.
                </p>
              </div>
            </div>
          </div>

          <div class="flex justify-center">
            <a href="/service-option-detail" class="inline-flex h-[43px] w-[290px] items-center justify-center rounded-full border border-transparent bg-[#436C5E] text-[14px] leading-[22.75px] tracking-[2.1px] text-white font-['Shippori_Mincho'] hover:bg-[#3b5e52] transition-colors lg:h-auto lg:w-auto lg:px-[24px] lg:py-[12px]">
              View option details
            </a>
          </div>
        </div>
      </section>

      <!-- Reservation Section -->
      <section class="relative lg:py-[150px] lg:px-[16px] xl:px-[272px] py-[80px] px-[16px]">
        <div class="absolute inset-0 overflow-hidden">
          <img
            src="/images/reservation-bg.jpg"
            alt=""
            class="hidden lg:block absolute inset-0 w-full h-full object-cover"
            data-no-fade
          />
          <img
            src="/images/reservation-bg.jpg"
            alt=""
            class="lg:hidden absolute inset-0 w-full h-full object-cover object-[position:34.8%_0%]"
            data-no-fade
          />
        </div>
        <div class="absolute inset-0 bg-black/16 mix-blend-multiply"></div>

        <div class="relative z-10 w-full">
          <div class="flex flex-col lg:gap-[32px] gap-[32px] items-center">
            <div class="text-center space-y-[8px]">
              <h2 class="lg:text-[32px] lg:leading-[54px] lg:tracking-[3.6px] text-[32px] leading-[54px] tracking-[3.6px] font-medium text-white font-['Shippori_Mincho']">RESERVATION</h2>
              <p class="text-[14px] leading-[20px] tracking-[1.4px] text-[#CBD5E1] font-['Shippori_Mincho'] invisible">RESERVATION</p>
            </div>

            <div class="lg:text-[16px] lg:leading-[32px] text-[15px] leading-[27px] tracking-[1.6px] text-[#E2E8F0] font-['Shippori_Mincho'] text-center whitespace-pre-line lg:max-w-[896px] max-w-full">Check availability and book easily online.
Enjoy a special time with us.</div>

            <div class="flex justify-center">
              <a href="/404" class="bg-white text-[#436C5E] rounded-[6px] font-medium leading-[26px] hover:bg-[#436C5E] hover:text-white transition-all duration-300 font-['Shippori_Mincho'] lg:w-[404px] w-[230px] h-[50px] text-[16px] tracking-[1.6px] flex items-center justify-center">
                BOOK YOUR STAY
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>

<style>

  .scroll-fade {
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 5s ease, transform 5s ease;
    will-change: opacity, transform;
  }

  .scroll-fade.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .kv-fade-bg {
    opacity: 0;
    transition: opacity 5s ease;
    will-change: opacity;
  }

  .kv-fade-bg.is-visible {
    opacity: 1;
  }

  .kv-fade-overlay {
    opacity: 0;
    transition: opacity 5s ease;
    will-change: opacity;
  }

  .kv-fade-overlay.is-visible {
    opacity: 0.39;
  }

  @media (min-width: 1280px) and (max-width: 1320px) {
    .service-pc-row {
      gap: 40px;
    }
  }

  .service-cover-img {
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    object-fit: cover;
    object-position: center;
  }

  .service-kv-img {
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    object-fit: cover;
    object-position: center;
  }

  .reservation-bg {
    background-image: url('/images/rooms/reservation-bg.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }

  .sauna-images-sp {
    position: relative;
    width: 100%;
    aspect-ratio: 343 / 490;
  }

  .sauna-main-window,
  .sauna-sub-window {
    position: absolute;
    overflow: hidden;
  }

  .sauna-main-window {
    width: 57.65%;
    height: 63.88%;
    left: 0;
    top: 0;
  }

  .sauna-main-sp-img {
    position: absolute;
    width: 228.3%;
    height: 96.1%;
    left: -32.92%;
    top: -1.52%;
    object-fit: cover;
    max-width: none;
  }

  .sauna-sub-window {
    width: 56.48%;
    height: 30.61%;
    left: 43.44%;
    top: 69.39%;
  }

  .sauna-sub-sp-img {
    position: absolute;
    width: 101.04%;
    height: 195.68%;
    left: -1.06%;
    top: -36.93%;
    object-fit: cover;
    max-width: none;
  }

  .onsen-images-sp {
    position: relative;
    width: 100%;
    aspect-ratio: 343 / 334;
  }

  .onsen-main-window,
  .onsen-sub-window {
    position: absolute;
    overflow: hidden;
  }

  .onsen-main-window {
    width: 69.97%;
    height: 72.34%;
    left: 30.03%;
    top: max(-47px, -14.07%);
  }

  .onsen-main-sp-img {
    position: absolute;
    width: 177.21%;
    height: 117.39%;
    left: -15.8%;
    top: -28.19%;
    object-fit: cover;
    max-width: none;
  }

  .onsen-sub-window {
    width: 48.39%;
    height: 34.73%;
    left: 0;
    top: 60%;
  }

  .onsen-sub-sp-img {
    position: absolute;
    width: 139.9%;
    height: 133.5%;
    left: -8.91%;
    top: -25.45%;
    object-fit: cover;
    max-width: none;
  }

  .food-images-sp {
    position: relative;
    width: 100%;
    aspect-ratio: 343 / 560;
  }

  .food-main-window,
  .food-sub-window {
    position: absolute;
    overflow: hidden;
  }

  .food-main-window {
    width: 77.26%;
    height: 54.36%;
    left: 0;
    top: 0;
  }

  .food-main-sp-img {
    position: absolute;
    width: 194.4%;
    height: 112.8%;
    left: -43.77%;
    top: -10.67%;
    object-fit: cover;
    max-width: none;
  }

  .food-sub-window {
    width: 55.81%;
    height: 30.79%;
    left: 44%;
    top: 59.11%;
  }

  .food-sub-sp-img {
    position: absolute;
    width: 173.1%;
    height: 128%;
    left: -43.69%;
    top: -7.93%;
    object-fit: cover;
    max-width: none;
  }

  .sauna-main,
  .sauna-sub,
  .onsen-main,
  .onsen-sub,
  .food-main,
  .food-sub,
  .option-img {
    position: relative;
    overflow: hidden;
  }

  .sauna-main-img,
  .sauna-sub-img,
  .onsen-main-img,
  .onsen-sub-img,
  .food-main-img,
  .food-sub-img,
  .option-img-inner {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-width: none;
  }

  .option-img-inner-1 {
    width: 488px;
    height: 731px;
    left: -55px;
    top: -394px;
    right: auto;
    bottom: auto;
  }

  .option-img-inner-2 {
    width: 670px;
    height: 446px;
    left: -215px;
    top: -147px;
    right: auto;
    bottom: auto;
  }

  .option-img-inner-3 {
    width: 333px;
    height: 499.44px;
    left: -15px;
    top: -123px;
    right: auto;
    bottom: auto;
  }

  @media (max-width: 1023px) {
