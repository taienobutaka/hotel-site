 * お客様からよく寄せられる質問と回答
 * Figmaデザイン: PC・SPレイアウト対応
 */
export const prerender = true;
---

<html lang="ja">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  
  <title>よくあるご質問 | aoshima tei 鈴 – SUZU</title>
  <meta name="description" content="aoshima tei 鈴 – SUZUへよく寄せられるご質問とその回答。ご宿泊前の疑問やご不明な点を解決いたします。" />
  
  <!-- OGP -->
  <meta property="og:title" content="よくあるご質問 | aoshima tei 鈴 – SUZU" />
